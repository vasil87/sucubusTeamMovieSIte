<div id='login-container' class="container">
    <div id='login-row' class="row">
        <div class="col-md-4 col-md-offset-8">
            <div id="login-form" class="panel panel-default">
                <div class="panel-body">
                    <h3 class="panel-title">Please sign in</h3>
                    <hr/>
                    <form accept-charset="UTF-8" role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" id="userName-log" placeholder="Email" name="text" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="password-log" placeholder="Password" name="password" type="password" value="">
                            </div>

                            <button id="btn-log" class="btn btn-lg btn-success btn-block" value="Login">Login</button>
                            <a id="btn-register" href='#/register' class="btn btn-lg btn-primary btn-block" value="Register">Register for Free</a>
                            <div class="remember-me-container">
                                <input type="checkbox" id="remember-me">
                                <label for="remember-me">Stay signed in</label>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>